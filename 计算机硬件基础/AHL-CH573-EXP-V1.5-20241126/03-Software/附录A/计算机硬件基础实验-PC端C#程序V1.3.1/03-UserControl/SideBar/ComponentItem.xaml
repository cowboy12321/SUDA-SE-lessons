<UserControl x:Class="GEC_LAB._03_UserControl.ComponentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GEC_LAB._03_UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="70"
             >
    <Border BorderBrush="Black" BorderThickness="1" Background="#f0f0f0" CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>

            <Image x:Name="displayImg" Source="{Binding DisplaySource}" Height="50"/>
            <TextBlock Grid.Row="1" Text="{Binding DisplayName}" Padding="0" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
